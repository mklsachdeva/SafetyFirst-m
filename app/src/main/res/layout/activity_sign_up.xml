<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="45dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="15dp"
        android:background="@color/background">

        <!--  Name Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:textColorHint="@color/white">

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_red_dark"
                android:hint="Name"
                android:inputType="textCapWords"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="15dp"
                android:padding="10dp"  />
        </android.support.design.widget.TextInputLayout>

        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColorHint="@color/white">

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_red_dark"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_email_white_24dp"
                android:drawablePadding="15dp"
                android:padding="10dp" />
        </android.support.design.widget.TextInputLayout>

        <!-- Password Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColorHint="@color/white">

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_red_dark"
                android:hint="Password"
                android:drawableLeft="@drawable/lock"
                android:foregroundGravity="center"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:drawablePadding="15dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"  />
        </android.support.design.widget.TextInputLayout>

        <!-- Confirm Password Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColorHint="@color/white">

            <EditText
                android:id="@+id/input_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_red_dark"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/lock"
                android:foregroundGravity="center"
                android:paddingLeft="10dp"
                android:drawablePadding="15dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"  />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox"
                android:gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:onClick="clickCheckbox"/>
            <TextView
                android:text="Agree to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agree_to" />
            <TextView
                android:text="@string/terms_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/terms_cond"
                android:onClick="clickTnc"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginLeft="2dp" />


        </LinearLayout>

        <!-- Signup Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_signup"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_blue_dark"
            android:textSize="20sp"
            android:text="Sign Up"
            android:textColor="@color/white" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="OR"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"

            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Already a member? "
                android:textSize="16dip" />

            <TextView
                android:id="@+id/link_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/login"
                android:textColor="@color/dark_red" />

        </LinearLayout>


    </LinearLayout>
